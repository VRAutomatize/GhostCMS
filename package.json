{
  "name": "ghost-cms-fork",
  "version": "1.0.0",
  "description": "Ghost CMS Fork - Blog Cleber Social",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/ghost-cms-fork.git"
  },
  "author": "Cleber Social",
  "license": "MIT",
  "scripts": {
    "start": "cd ghost/core && node index.js start",
    "dev": "cd ghost/core && node index.js dev",
    "build": "cd ghost/core && yarn build:assets",
    "seed": "node seed.js",
    "docker:build": "docker build -t ghost-cms-fork .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:shell": "docker-compose exec ghost-fork /bin/bash",
    "setup": "yarn install && yarn build && yarn seed"
  },
  "engines": {
    "node": "^18.0.0",
    "yarn": "^1.22.0"
  },
  "dependencies": {
    "knex": "^2.4.2",
    "mysql2": "^3.15.0",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  }
}